<div class="scroll-area" data-role="ad-pic" style="width:{{win_width}}">
<ul data-role="ad-pic-inner">
        {{#each pic_list}}
        <li>
        <img src="{{img}}" style="width:100%">
        </li>
        {{/each}}
</ul>
<div class="ad-pic-point-out">
        <ul data-role="ad-pic-point" class="ad-pic-point">
        {{#each pic_list}}
            <li class="current" data-index="{{@index}}"></li>
        {{/each}}
        </ul>
</div>
</div>