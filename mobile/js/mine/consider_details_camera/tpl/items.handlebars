{{#if date_log}}
    <div class="step_container secondary" data-role="step_container">
        <div class="line"></div>
        <div class="step_side">
            {{#each date_log}}
                <div class="child">
                    <div class="cirle"></div>
                    <div class="user_icon">
                        <div class="avatar-size-mod avatar-size-mod-32">
                            <!--span class="icon avatar-size-area"></span-->
                            <i class="avatar-size-img radius-af" style="background-image: url({{user_icon}});background-size:cover;background-repeat: no-repeat;background-position: 50%;"></i>
                        </div>
                    </div>
                    <div class="log_side">
                        <div class="title">{{{text}}}</div>
                        {{#if reason}}<div class="reason" style="width: 80%;"><div>理由：</div><div>{{reason}}</div></div>{{/if}}
                        {{#if overall_score_stars_list}}
                            <div class="overall_score_stars_list">
                                <div class="width65">总体评价：</div>
                                {{#each overall_score_stars_list}}
                                    {{#if is_red}}
                                        <i class="icon icon-stat-s-y"></i>
                                    {{^}}
                                        <i class="icon icon-stat-s-g"></i>
                                    {{/if}}
                                {{/each}}
                            </div>
                        {{/if}}
                        {{#if expressive_score_stars_list}}
                            <div class="overall_score_stars_list">
                                <div class="width65">表现力：</div>
                                {{#each expressive_score_stars_list}}
                                    {{#if is_red}}
                                        <i class="icon icon-stat-s-y"></i>
                                    {{^}}
                                        <i class="icon icon-stat-s-g"></i>
                                    {{/if}}
                                {{/each}}
                            </div>
                        {{/if}}
                        {{#if rp_stars_list}}
                            <div class="rp_stars_list">
                                <div class="width65">RP：</div>
                                {{#each rp_stars_list}}
                                    {{#if is_red}}
                                        <i class="icon icon-stat-s-y"></i>
                                    {{^}}
                                        <i class="icon icon-stat-s-g"></i>
                                    {{/if}}
                                {{/each}}
                            </div>
                        {{/if}}
                        {{#if truth}}<div class="truth"><div class="width65">真实性：</div>{{#if is_truth}}<i class="icon icon-commit_good"></i><div>真实</div>{{^}}<i class="icon icon-commit_bad"></i><div>不真实</div>{{/if}}</div>{{/if}}
                        {{#if time_sense}}<div class="time_sense"><div class="width65">时间观念：</div>{{#if is_time_sense}}<i class="icon icon-commit_good"></i><div>准时</div>{{^}}<i class="icon icon-commit_bad"></i><div>不准时</div>{{/if}}</div>{{/if}}
                        {{#if comment}}<div class="comment"><div class="width65">备注：</div><div class="warp_width">{{comment}}</div></div>{{/if}}
                        <div class="time {{#if comment}}font_gray{{/if}}">{{add_time}}</div>
                        <div class="btn_talk fn-hide" data-role="btn_talk_container">
                            <button data-role="btn_talk" class="ui-button ui-button-primary ui-button-size-middle ui-button-block ui-button-primary ui-button-size-radius-large">
                                <span class="ui-button-content"><i class="icon icon-siliao-m"></i> 私聊一下</span>
                            </button>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}


