<main role="main" class="action-signin wryh">

    <header class="nav-header sign-nav-header">
        <div class="left-button-wrap" data-role="page-back">
            <a><i class="icon icon-back"></i></a>
        </div>

        <h3 class="title">报名网友</h3>
        
        <div class="right-button-wrap">
            <div class="sign-scan fn-hide" data-role="sign-scan">扫码签到</div>

        </div>
    </header>

    <div data-role="container" class="content-body">
        <div class="action-signin-content">
            <h1 data-role="event_title">{{event_title}}</h1>
            <section class="action-signin-list fn-hide">
                <ul data-role="action-signin-list">
                </ul>
            </section>
            <section class="action-signin-new">
                <ul data-role="action-signin-list">
                </ul>
            </section>
        </div>
    </div>

    {{#unless is_mine}}

        <footer class="pop-model-car-confirm" data-role="footer">
            <ul class="list clearfix">
                <li data-role="join-in" class="fn-hide">
                    {{#if return_home}}
                        <button data-role="btn_success" class="ui-button ui-button-size-middle ui-button-block ui-button-primary ui-button-size-radius-large auto_width">
                            <span data-role="next" class="ui-button-content"><i class="icon icon-siliao-m"></i>返回我的</span>
                        </button>
                    {{^}}
                        <button data-role="navigate" data-target="apply" class="ui-button ui-button-size-middle ui-button-block ui-button-primary ui-button-size-radius-large auto_width">
                            <span class="ui-button-content"><i class="icon icon-siliao-m"></i>马上报名</span>
                        </button>
                    {{/if}}
                </li>
            </ul>
        </footer>
    {{/unless}}
</main>