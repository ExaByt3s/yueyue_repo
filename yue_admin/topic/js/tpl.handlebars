<script id="normal-form-template" type="text/x-handlebars-template">
    <div class="entry" data-view-id="{{ id}}" data-tpl-name="{{ tpl_type}}">
        <select name="type" data-role="normal-select" class="pd10 entry-select">
            {{#each select_arr}}
            <option name="type" value="{{value}}" {{#if selected}}selected{{/if}}>{{ text}}</option>
            {{/each}}

        </select>

        <div data-role="from-type" class="from-type">
            <span class="from-page">表格</span>
            <input type="text" value="1" class="from-num" data-role="form-num" readonly="readonly">
            <div data-role="child-item-tpl-container" class="child-item-content"></div>
            <input type="button" value="添加" data-role="add"  class="btn-bg169fe6 entry-btn "/>
            <input type="button" value="删除" data-role="remove" data-normal-num="{{ id}}" class="btn-bgff5e52 entry-btn"/>
        </div>
    </div>
</script>

