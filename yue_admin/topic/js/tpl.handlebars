<!--商品模版1-子模板-->
<script id="goods1-child-template" type="text/x-handlebars-template">
    {{#each tr_list}}
    <tr data-row-id="{{id}}" data-name="goods">
        <td align="right" data-role="goods_sort">商品{{name}}：</td>
        <td width="252"><label for="goods_tpl1_id[{{ id}}][]"></label>
            商品ID:
            <input type="text" name="goods_tpl1_id[{{ id}}][]" value="{{ goods_id}}" size="10"  /></td>
	<td width="284">商品链接:
            <input type="text" name="goods_tpl1_url[{{ id}}][]" value="{{ goods_url}}" /></td>
        <td width="284">促销文案:
            <input type="text" name="goods_tpl1_text[{{ id}}][]" value="{{ goods_text}}" /></td>
        <td width="268">角标:
            <label for="select"></label>
            <select name="goods_tpl1_tag[{{ id}}][]" id="select">
                {{#each select_options}}
                <option value="{{ value}}" {{#if selected}}selected{{/if}}>{{ value}}</option>
                {{/each}}
            </select>
            <button data-role="del-items" data-num="{{ id}}">删除</button>
        </td>
    </tr>
    {{/each}}
</script>

